                "C:/msys64/mingw64/lib/gcc/x86_64-w64-mingw32/15.2.0/include"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "__INTEL_COMPILER" // فعال کردن توابع Intel
            ],
            "compilerPath": "C:/msys64/mingw64/bin/g++.exe",  // از MinGW یا Intel Compiler استفاده کن
            "intelliSenseMode": "gcc-x64",
            "browse": {
                "path": [
                    "${workspaceFolder}/**",
                    "C:/msys64/mingw64/include",
                    "C:/msys64/mingw64/include/opencv4"
                ],
                "limitSymbolsToIncludedHeaders": true
            },
            "forcedInclude": [],
            "compilerArgs": []
        }
    ]
