{
    "version": 4,
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "C:/msys64/mingw64/include/opencv4",  // OpenCV
                "C:/msys64/mingw64/include",          // MinGW64
                "C:/Program Files (x86)/Intel/oneAPI/2025.3/lib/clang/21/include",  // Intel Intrinsics
                "C:/Program Files (x86)/Windows Kits/10/Include",  // ویندوز SDK
                "C:/msys64/mingw64/include/c++/15.2.0",  // برای استفاده از کتابخانه‌های C++
